<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_home">
    <Button
            android:text="Sign up"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/homeToSignUp"
            android:layout_marginBottom="516dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_conversion_wrapWidth="231"
            tools:layout_conversion_wrapHeight="126"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05"/>
    <Button
            android:text="Sign In"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/homeToSignIn"
            app:layout_constraintTop_toBottomOf="@+id/homeToSignUp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>
    <Button
            android:text="Google Login"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/homeGoogleLogin"
            app:layout_constraintTop_toBottomOf="@id/homeToSignIn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

    <Button
            android:text="Google Logout"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/homeGoogleLogout"
            app:layout_constraintTop_toBottomOf="@id/homeGoogleLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

    <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/homeGoogleLogout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="350dp">

        <TextView
                android:textColor="#ffffff"
                android:id="@+id/tokenView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </ScrollView>



</android.support.constraint.ConstraintLayout>