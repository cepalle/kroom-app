<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_home">

    <Button
            android:text="@string/sign_up"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/homeToSignUp"
            android:layout_marginBottom="516dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_conversion_wrapWidth="231"
            tools:layout_conversion_wrapHeight="126"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05"/>
    <Button
            android:text="@string/sign_in"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/homeToSignIn"
            app:layout_constraintTop_toBottomOf="@+id/homeToSignUp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

    <Button
            android:text="@string/google_login"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/homeGoogleLogin"
            android:onClick="onClick"
            app:layout_constraintTop_toBottomOf="@id/homeToSignIn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"/>

    <Button
            android:text="@string/google_logout"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:onClick="onClick"
            android:id="@+id/homeGoogleLogout"
            app:layout_constraintTop_toBottomOf="@id/homeGoogleLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp"/>
    <Button
            android:text="@string/is_loged_in"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:onClick="onClick"
            android:id="@+id/homeLogedIn"
            app:layout_constraintTop_toBottomOf="@id/homeGoogleLogout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp"/>

    <Button
            android:text="@string/get_curret_idp_type"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:onClick="onClick"
            android:id="@+id/homeIdpType"
            app:layout_constraintTop_toBottomOf="@id/homeLogedIn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp"/>

    <Button
            android:text="@string/get_access_token"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:onClick="onClick"
            android:id="@+id/homeAccessToken"
            app:layout_constraintTop_toBottomOf="@id/homeIdpType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp"/>

    <Button
            android:text="@string/get_email"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:onClick="onClick"
            android:id="@+id/homeEmail"
            app:layout_constraintTop_toBottomOf="@id/homeAccessToken"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp"/>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/homeEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="370dp">

        <TextView
                android:textColor="#FFFFFF"
                android:id="@+id/tokenView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </ScrollView>



</android.support.constraint.ConstraintLayout>