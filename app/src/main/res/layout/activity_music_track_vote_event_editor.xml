<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/musicTrackVoteEventEditor">

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/musicTrackVoteEditorNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
                android:id="@+id/musicTrackVoteEditorPublic"
                android:icon="@drawable/ic_home_black_24dp"
                android:text="@string/public_music_track_vote_editor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
                android:id="@+id/musicTrackVoteEditorPrivate"
                android:icon="@drawable/ic_launcher_background"
                android:text="@string/private_music_track_vote_editor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
                android:id="@+id/musicTrackVoteEditorAdd"
                android:icon="@drawable/ic_music_note_black_24dp"
                android:text="@string/add_music_track_vote_editor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
            android:id="@+id/trackVoteEditorNavigationContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/musicTrackVoteEditorNavigation"
            android:layout_marginTop="8dp">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>