<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height= "85dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        >


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:id="@+id/linearlayout1"
            android:clickable="false">

        <ImageView
                android:id="@+id/itemMusicTrackVoteCoverSmall"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:contentDescription="@string/track_vote_cover_small"
                android:foregroundGravity="center"
                tools:srcCompat="@tools:sample/backgrounds/scenic"/>

        <TextView
                android:id="@+id/itemMusicTrackVoteArtist"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:gravity="center|center_horizontal|center_vertical"
                android:maxLines="1"
                android:text="@string/track_vote_artist"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="19sp"
                tools:ignore="RtlCompat" />
        <TextView
                android:id="@+id/textScore"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/score"
                android:gravity="center|center_horizontal|center_vertical"
                android:scaleType="centerInside"/>

        <TextView
                android:id="@+id/itemMusicTrackVoteScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/music_track_vote_score"
                android:gravity="center|center_horizontal|center_vertical"
                android:scaleType="centerInside"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/linearlayout1"
            android:layout_alignParentEnd="true">

        <TextView
                android:id="@+id/itemMusicTrackVoteTitle"
                android:layout_width="96dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="@string/track_vote_title"
                android:gravity="start|center_vertical|center_horizontal"
                android:scaleType="centerInside"
                android:textSize="17sp"
                android:visibility="visible"/>

        <TextView
                android:id="@+id/textDuration"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/duration"
                android:gravity="start|center_vertical"
                android:scaleType="centerInside"/>

        <TextView
                android:id="@+id/itemMusicTrackVoteDuration"
                android:layout_width="11dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/music_track_vote_duration"
                android:gravity="start|center_horizontal|center_vertical"
                android:scaleType="centerInside"/>

        <Button
                android:id="@+id/itemMusicTrackVoteUp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="@string/music_track_vote_up"
                android:gravity="center|center_horizontal|center_vertical"
                android:scaleType="centerInside"
                android:clickable="true"
                android:focusable="true"/>


    </LinearLayout>


</RelativeLayout>

