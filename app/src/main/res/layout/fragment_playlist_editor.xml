<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_playlist_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    >

        <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_private"
                android:icon="@drawable/ic_home_black_24dp"
                android:text="public" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_public"
                android:icon="@drawable/ic_launcher_background"
                android:text="private" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_add"
                android:icon="@drawable/ic_music_note_black_24dp"
                android:text="add" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
            android:id="@+id/tab_navigation_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabs_playlist_navigation"/>

</androidx.constraintlayout.widget.ConstraintLayout>